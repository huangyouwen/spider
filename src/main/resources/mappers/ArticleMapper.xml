<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easystar.dao.ArticleDao">
    <!-- 这里namespace必须是UserMapper接口的路径” -->
    <insert id="insertArticle" useGeneratedKeys="true" parameterType="Article">
        insert into tb_article(title,src_path) values(#{title},#{srcPath})
        <!-- 这里sql结尾不能加分号，否则报“ORA-00911”的错误 -->
    </insert>

    <!-- 这里的id必须和UserMapper接口中的接口方法名相同 -->
    <select id="getArticle" resultType="Article" parameterType="java.lang.String">
        select * from tb_article where name=#{name}
    </select>
</mapper>